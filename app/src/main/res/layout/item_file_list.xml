<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/material_horizontal_margin"
                android:layout_marginStart="@dimen/material_horizontal_margin"
                android:layout_width="match_parent"
                android:orientation="vertical">

    <ImageView
            android:id="@+id/audioImage"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/material_horizontal_margin"
            android:layout_marginTop="@dimen/material_horizontal_margin"
            android:layout_width="40dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic[5]"/>

    <TextView
            android:id="@+id/audioFileName"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_horizontal_margin"
            android:layout_marginStart="@dimen/material_horizontal_margin"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/audioImage"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem[8]"/>

    <TextView
            android:id="@+id/audioAuthor"
            android:layout_alignStart="@id/audioFileName"
            android:layout_below="@id/audioFileName"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_horizontal_margin"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/audioImage"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="@tools:sample/lorem[3]"/>
</RelativeLayout>