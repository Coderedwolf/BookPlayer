<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/audioImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/material_horizontal_margin"
        android:layout_marginTop="@dimen/material_horizontal_margin"
        android:layout_marginBottom="@dimen/material_horizontal_margin"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic[5]" />

    <TextView
        android:id="@+id/audioFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/material_horizontal_margin"
        android:layout_toEndOf="@id/audioImage"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="@tools:sample/lorem[8]" />

    <TextView
        android:id="@+id/audioAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audioFileName"
        android:layout_alignStart="@id/audioFileName"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/material_horizontal_margin"
        android:layout_toStartOf="@id/audioDuration"
        android:layout_toEndOf="@id/audioImage"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="@tools:sample/lorem[5]" />

    <TextView
        android:id="@+id/audioDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audioFileName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/material_horizontal_margin"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="366 мин" />
</RelativeLayout>